{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/Outsmart-OOH/ooh_open_direct/master/schema/v0/uris/orders/orders_collection_response.json",
    "type": "object",
    "title": "Response for a collection of orders",
    "description": "The schema of a response that gives a collection of Orders",
    "required": [
        "Orders"
    ],
    "additionalProperties": false,
    "properties": {
        "$schema": {
            "type": "string"
        },
        "Orders": {
            "$id": "#/properties/orders",
            "type": "array",
            "title": "Array of Orders",
            "description": "Collection of Orders",
            "items": {
                "$ref": "https://raw.githubusercontent.com/Outsmart-OOH/ooh_open_direct/master/schema/v0/resources/order/order_object.json",
                "required": [
                    "Id",
                    "Name"
                ]
            }
        }
    }
}