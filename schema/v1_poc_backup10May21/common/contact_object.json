{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/Outsmart-OOH/ooh_open_direct/master/schema/v1/common/contact_object.json",
    "type": "object",
    "title": "Contact Type",
    "description": "Contact object.",
    "required": [
        "FirstName",
        "LastName",
        "Email",
        "Type"
    ],
    "properties": {
        "Honorific": {
            "type": "string",
            "maxLength": 20,
            "description": "The contact's honorific such as Mr, Mrs",
            "$id": "#/properties/Honorific"
        },
        "Title": {
            "type": "string",
            "maxLength": 30,
            "description": "The contact's job title",
            "$id": "#/properties/Title"
        },
        "FirstName": {
            "type": "string",
            "maxLength": 20,
            "description": "The contact's first name",
            "$id": "#/properties/FirstName"
        },
        "LastName": {
            "type": "string",
            "maxLength": 20,
            "description": "The contact's last name",
            "$id": "#/properties/Lastname"
        },
        "Email": {
            "type": "string",
            "maxLength": 254,
            "description": "The contact's email address",
            "$id": "#/properties/Email"
        },
        "Phone": {
            "type": "string",
            "maxLength": 20,
            "description": "The contact's phone number",
            "$id": "#/properties/Phone"
        },
        "Type": {
            "type": "string",
            "enum": [
                "Billing",
                "Buyer",
                "Creative"
            ],
            "maxLength": 10,
            "description": "The type of contact that this resource represents (e.g. billing, creative)",
            "$id": "#/properties/Type"
        },
        "Address": {
            "description": "The organisation's corporate headquarters address",
            "$id": "#/properties/Address",
            "type": "object",
            "$ref": "https://raw.githubusercontent.com/Outsmart-OOH/ooh_open_direct/master/schema/v1/common/address_object.json"
        }
    }
}